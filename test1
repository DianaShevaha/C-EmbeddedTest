#include <stdio.h>
#include <stdlib.h>

int main(int argc, char* argv[])
{
    int n;
    int k;
    int res;

    if (argc != 3)
        return (1);
    n = atoi(argv[1]);
    k = atoi(argv[2]);
    if (n < 0 || k < 0)
        return (1);
    res = n / (k + 1);
    printf("%d\n", res);
    return (0); 
}
